%h1 Новости Deadline 2012
%br
- @news.each do |n|
  .well
    %a.b-news{:href => news_path(n)}
      %h4= n.name
    - if n.published_at?
      .help-block= l n.published_at, :format => :news
    != truncate_sanitize_rem_br n.body, 300

= link_to t('back'), first_deadline_index_path, :class => "btn"

